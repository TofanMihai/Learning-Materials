@inherits UmbracoViewPage<BlockListItem>

@{
    var imageRow = (ImageRow)Model.Content;
    var imageSettings = (ImageRowSettings)Model.Settings;
    if(imageSettings.Hide == true ) {return;}
}

<div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
        @if (!imageSettings.Hide)
        {
            <a href="@imageRow.Link.Url" target="@imageRow.Link.Target">
                <img class="img-fluid" src="@imageRow.Image.Url()" alt="@imageRow.Caption ">
            </a>
        }
    </div>
</div>